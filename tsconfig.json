{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/node_modules/*"
      ]
    }
  },
  "include": [
    "./src/daemon/*"
  ],
  "exclude": [
    "node_modules",
    "src/node_modules"
  ]
}
